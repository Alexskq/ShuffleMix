<h1 class="text-5xl font-bold text-center mt-5 mb-10">üèÜ Shuffle Selection üèÜ </h1>

<div class="flex justify-between items-start gap-2">
  <div class="py-5">
    <span id="headline" class="text-3xl font-bold mb-4">üìú Les projets</span>
    <small id="subheader">(separated by commas or new lines) 
      <span id="counter"></span>
    </small>
    <textarea class="p-3 border border-gray-400 rounded-s-md bg-inherit" id="names" rows="5" cols="40"><%= @participants.map(&:name).join(", ") %></textarea>
    <small id="counter"></small>
    
  </div>

  <div class="flex gap-3 self-center">
    <button id="spin" class="btn btn-active btn-primary text-xl">Spin the wheel</button>
    <button id="remove">Remove Winner</button>
  </div>

  <div class="py-5 text-3xl font-bold mb-4 items-start">
    <h2>ü•á Ordres de passage : </h2>
    <div id="passageOrder" class="font-normal mb-5"></div>
  </div>
</div>

  <div class="container flex justify-center mt-10">
    <div id="wheel"></div>
  </div>
</div>


<!-- Modale pour afficher le gagnant -->
<div id="projectModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden">
  <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
    <div class="mt-3 text-center">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Projet du gagnant</h3>
      <div class="mt-2 px-7 py-3">
        <p id="winnerName" class="text-lg font-bold text-gray-700"></p>
        <p id="projectName" class="text-sm text-gray-500"></p>
      </div>
      <div class="items-center px-4 py-3">
        <button id="closeModal" class="px-4 py-2 bg-blue-500 text-white text-base font-medium rounded-md w-full shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-300">
          Fermer
        </button>
        <button id="remove">Remove Winner</button>
      </div>
    </div>
  </div>
</div>

<script>
  // Liste des participants et leurs projets
  const participantProjects = {
    <% @participants.each do |participant| %>
      "<%= participant.name %>": "<%= participant.project_name %>",
    <% end %>
  };

  document.addEventListener('DOMContentLoaded', function() {
    const modal = document.getElementById('projectModal');
    const projectName = document.getElementById('projectName');
    const winnerName = document.getElementById('winnerName');
    const closeModal = document.getElementById('closeModal');

    // Fonction pour afficher la modale avec le nom du gagnant et son projet
    window.showProjectModal = function(winner) {
      const project = participantProjects[winner] || "Projet non sp√©cifi√©";
      winnerName.textContent = `Gagnant : ${winner}`;
      projectName.textContent = `Projet : ${project}`;
      modal.classList.remove('hidden');
    };

    closeModal.addEventListener('click', function() {
      modal.classList.add('hidden');
    });

    // Simulation du spin de la roue
    // document.getElementById('spin').addEventListener('click', function() {
    //   const names = Object.keys(participantProjects);
    //   const winner = names[Math.floor(Math.random() * names.length)];
    //   showProjectModal(winner);
    // });
  });
</script>
